<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UserName"
        app:layout_constraintEnd_toEndOf="@+id/register_account"
        app:layout_constraintTop_toBottomOf="@+id/register_account" />

    <EditText
        android:id="@+id/register_pwd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Userpwd"
        app:layout_constraintEnd_toEndOf="@+id/register_name"
        app:layout_constraintTop_toBottomOf="@+id/register_name" />

    <EditText
        android:id="@+id/register_pwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Userpwd"
        app:layout_constraintEnd_toEndOf="@+id/register_pwd1"
        app:layout_constraintTop_toBottomOf="@+id/register_pwd1" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:onClick="registerUser"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_pwd2" />

    <TextView
        android:id="@+id/register_account_label"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:text="Account"
        app:layout_constraintBottom_toBottomOf="@+id/register_account"
        app:layout_constraintEnd_toStartOf="@+id/register_account"
        app:layout_constraintTop_toTopOf="@+id/register_account" />

    <TextView
        android:id="@+id/register_username_label"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:text="UserName"
        app:layout_constraintBottom_toBottomOf="@+id/register_name"
        app:layout_constraintEnd_toStartOf="@+id/register_name" />

    <TextView
        android:id="@+id/register_userpwd1_label"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:text="Your Password"
        app:layout_constraintBottom_toBottomOf="@+id/register_pwd1"
        app:layout_constraintEnd_toStartOf="@+id/register_pwd1"
        app:layout_constraintTop_toTopOf="@+id/register_pwd1" />

    <TextView
        android:id="@+id/register_userpwd2_label"
        android:layout_width="73dp"
        android:layout_height="45dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="@+id/register_pwd2"
        app:layout_constraintEnd_toStartOf="@+id/register_pwd2"
        app:layout_constraintTop_toTopOf="@+id/register_pwd2" />

    <TextView
        android:id="@+id/result"
        android:layout_width="239dp"
        android:layout_height="114dp"
        android:layout_marginBottom="84dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>